@model Drogueria1._1_.Models.Ingrediente

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                <label class="form-label">Código</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdIngredientea)
            </dd>
            <dt class="col-sm-2">
                <label class="form-label">Nombre</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.IdIngredientea" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>