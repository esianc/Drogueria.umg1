@model IEnumerable<Drogueria1._1_.Models.Ingrediente>

@{
    ViewData["Title"] = "Ingredientes";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <p class="mt-3">
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Ingrediente</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Código Ingrediente</th>
                <th>Nombre</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdIngredientea)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdIngredientea" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdIngredientea" class="btn btn-sm btn-secondary">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdIngredientea" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
