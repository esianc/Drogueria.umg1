@model Drogueria1._1_.Models.Enfermedad

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Detalles de Enfermedad</h4>
                    <hr />
                    <form>
                        <div class="mb-3">
                            <label class="form-label">ID</label>
                            <input asp-for="IdEnfermedad" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <input asp-for="Descripcion" class="form-control" readonly />
                        </div>
                    </form>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.IdEnfermedad" class="btn btn-primary">Editar</a>
                        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>