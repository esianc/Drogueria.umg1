@model Drogueria1._1_.Models.Empleado

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Código</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.IdEmpleado)</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Nombre)</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Teléfono</label>
                <div class="col-sm-10">
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.Telefono)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.IdEmpleado" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>