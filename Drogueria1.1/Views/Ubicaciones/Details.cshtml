@model Drogueria1._1_.Models.Ubicacion

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    <label class="form-label">Código</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdUbicacion)
                </dd>
                <dt class="col-sm-2">
                    <label class="form-label">Descripción</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>

            <div class="mb-3">
                <a asp-action="Edit" asp-route-id="@Model?.IdUbicacion" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
</div>

