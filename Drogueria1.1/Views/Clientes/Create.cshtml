@model Drogueria1._1_.Models.Cliente

@{
    ViewData["Title"] = "Nuevo";
}

<div class="container mt-4">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="IdCliente" class="form-label">NIT o DPI</label>
                    <input asp-for="IdCliente" class="form-control" required />
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" required />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Correo" class="form-label">Correo</label>
                    <input asp-for="Correo" class="form-control" required />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="IdEnfermedad" class="form-label">Enfermedad</label>
                    <select asp-for="IdEnfermedad" class="form-control" asp-items="ViewBag.IdEnfermedad"></select>
                    <span asp-validation-for="IdEnfermedad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
