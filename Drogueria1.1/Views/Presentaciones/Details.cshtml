@model Drogueria1._1_.Models.Presentacion

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                <label class="form-label">Código</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdPresentacion)
            </dd>
            <dt class="col-sm-2">
                <label class="form-label">Descripción</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.IdPresentacion" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>